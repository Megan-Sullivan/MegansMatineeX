@page
@model MegansMatineeX.Pages.LeadActs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>LeadAct</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeadAct.LeadActName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeadAct.LeadActName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeadAct.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeadAct.Birthdate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeadAct.LeadActDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeadAct.LeadActDetails)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeadAct.AdditionalInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeadAct.AdditionalInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeadAct.MovieCasts)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Movie Title</th>
                    <th>Rank</th>
                </tr>
                @foreach (var item in Model.LeadAct.MovieCasts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Movie.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rank)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.LeadAct.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
